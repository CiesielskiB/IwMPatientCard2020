@model KartaPacjentaIwM.Models.PatientListViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Patient List</h1>
<form asp-controller="Patient" asp-action="Index" method="get">
    <div class="form-group col-md-4">
        <label for="searchString">Surname</label>
        <input class="form-control" type="text" asp-for="SearchString" />
    </div>
    <button type="submit" class="btn btn-primary ml-3 mb-3">Filter</button>

</form>
<table class="table mt-3">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Patients[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patients[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patients[0].Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patients[0].Gender)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Patients) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new {id=item.Id})
            </td>
        </tr>
}
    </tbody>
</table>
